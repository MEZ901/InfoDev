{
  "name": "infodev",
  "version": "1.0.0",
  "description": "A dynamic tech news blog for developers, featuring user authentication, article management, and interactive discussions.",
  "main": "app.js",
  "scripts": {
    "start": "node .",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:tailwindcss\" \"npm run dev:sync\"",
    "dev:server": "nodemon .",
    "dev:tailwindcss": "npx tailwindcss -i ./public/stylesheet/main.css -o ./public/stylesheet/output.css --watch --minify",
    "dev:sync": "browser-sync start --proxy 'localhost:3000' --files './src/views/**/*.ejs' --no-open",
    "prisma:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node ./prisma/seeders/index.js",
    "db:reset": "prisma migrate reset"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.1.0",
    "@prisma/client": "^5.4.1",
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "prisma": "^5.4.1",
    "tailwindcss": "^3.3.3"
  }
}
